{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text product-more">
                        <a href="/"><i class="fa fa-home"></i> Accueil</a>
                        <span>Panier</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="cart-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th class="p-name">Nom produit</th>
                                    <th>Prix</th>
                                    <th>Quantité</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            {% if items | length > 0 %}
                            {% for item in items %}
                            <tbody>
                                <tr>
                                    <td class="cart-pic first-row"><img src="/img/products/{{ item.product[0].imageUrl }}" alt=""></td>
                                    <td class="cart-title first-row">
                                        <a href="{{ path('product.show', {id: item.product[0].id, slug: item.product[0].slug }) }}">
                                            <h5>{{ item.product[0].name }}</h5>
                                        </a>
                                    </td>
                                    <td class="p-price first-row">{{ item.product[0].price }} €</td>
                                    <td class="qua-col first-row">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="text" value="{{ item.quantity}}">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="total-price first-row">{{ item.product[0].price * item.quantity}} €</td>
                                    <td class="close-td first-row"><i class="ti-close"></i></td>
                                </tr>
                            {% endfor %}
                            
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="cart-buttons">
                                <a href="#" class="primary-btn continue-shop">Continuer les achats</a>
                                <a href="#" class="primary-btn up-cart">Mettre à jour le panier</a>
                            </div>
                            <div class="discount-coupon">
                                <h6>Code promo</h6>
                                <form action="#" class="coupon-form">
                                    <input type="text" placeholder="Entrer vote code promo">
                                    <button type="submit" class="site-btn coupon-btn">Appliquer</button>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-4 offset-lg-4">
                            <div class="proceed-checkout">
                                <ul>
                                    <li class="subtotal">Total HT<span>{{ total * 0.8 }} €</span></li>
                                    <li class="cart-total">Total TTC<span>{{ total }} €</span></li>
                                </ul>
                                <a href="#" class="proceed-btn">COMMANDER</a>
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="cart-buttons">
                                <a href="#" class="primary-btn continue-shop">Continuer les achats</a>
                                <a href="#" class="primary-btn up-cart">Mettre à jour le panier</a>
                            </div>
                            <div class="discount-coupon">
                                <h6>Code promo</h6>
                                <form action="#" class="coupon-form">
                                    <input type="text" placeholder="Entrer vote code promo">
                                    <button type="submit" class="site-btn coupon-btn">Appliquer</button>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-4 offset-lg-4">
                            <div class="proceed-checkout">
                                <ul>
                                    <li class="subtotal">Sous-total <span>0.00 €</span></li>
                                    <li class="cart-total">Total <span>0.00 €</span></li>
                                </ul>
                                <a href="" class="proceed-btn">COMMANDER</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </section>

{% endblock %}