{{ form_start(form) }}
<div class="row">
    <div class="col-md-4">{{ form_row(form.name) }}</div>
    <div class="col-md-4">{{ form_row(form.imageUrl) }}</div>
    <div class="col-md-2">{{ form_row(form.price) }}</div>
    <div class="col-md-2">{{ form_row(form.priceWeight) }}</div>
</div></br>
<div class="row">
    <div class="col-md-8">{{ form_row(form.description) }}</div>
    <div class="col-md-2">{{ form_row(form.stock) }}</div>
    <div class="col-md-2">{{ form_row(form.barCode) }}</div>
</div></br>
<div class="row">
    <div class="col-md-8">{{ form_row(form.specifications) }}</div>
</div></br>

{{ form_widget(form) }}
<button class="btn btn-primary">{{ button|default('Enregister') }}</button>
{{ form_end(form) }}