{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}

    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text product-more">
                        <a href="/"><i class="fa fa-home"></i> Accueil</a>
                        <a href="/courses-en-ligne">Produits</a>
                        <span>Details</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="product-shop spad page-details">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="product-pic-zoom">
                                <img class="product-big-img" src="/img/products/{{ products.imageUrl }}" alt="">
                                <div class="zoom-icon">
                                    <i class="fa fa-search-plus"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="product-details">
                                <div class="pd-title">
                                    <span>{{ products.category.name }}</span>
                                    <h3>{{ products.name }}</h3>
                                    <a href="#" class="heart-icon"><i class="icon_heart_alt"></i></a>
                                </div>
                                <div class="pd-desc">
                                    <p>{{ products.description }}</p></br>
                                    <h4>{{ products.price }} €<span>{{ products.priceWeight }}</span></h4>
                                </div>
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input type="text" value="1">
                                    </div>
                                    <a href="{{ path('cart_add', {'id': products.id}) }}" class="primary-btn pd-cart">Ajouter au panier</a>
                                </div>
                                {% if products.stock > 1 %}
                                <div class="p-stock detail-a">En stock</div>
                                {% else %}
                                <div class="p-stock detail-b">En rupture de stock</div>
                                {% endif %}
                                </br>
                                <div class="pd-share">
                                    <div class="p-code">Ref : {{ products.barCode }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="product-tab">
                        <div class="tab-item">
                            <ul class="nav" role="tablist">
                                <li>
                                    <a class="active" data-toggle="tab" href="#tab-1" role="tab">DESCRIPTION</a>
                                </li>
                                <li>
                                    <a data-toggle="tab" href="#tab-2" role="tab">SPECIFICATIONS</a>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-item-content">
                            <div class="tab-content">
                                <div class="tab-pane fade-in active" id="tab-1" role="tabpanel">
                                    <div class="product-content">
                                        <div class="row">
                                            <div class="col-lg-7">
                                                <p>{{ products.description }}</p>
                                            </div>
                                            <div class="col-lg-5">
                                                <img src="/img/products/{{ products.imageUrl }}" alt="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tab-2" role="tabpanel">
                                    <div class="specification-table">
                                        <table>
                                            <tr>
                                                <td class="p-catagory">Disponibilité</td>
                                                <td>{% if products.stock > 1 %}
                                                    <div class="p-stock">En stock</div>
                                                    {% else %}
                                                    <div class="p-stock">En rupture de stock</div>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                            <tr>{% if products.priceWeight == null %}
                                                <td class="p-catagory">Prix à l'unité</td>
                                                <td>
                                                    <div class="p-weight">
                                                        {{ products.price }}
                                                    </div>
                                                </td>
                                                {% else %}
                                                <td class="p-catagory">Prix au kg/L</td>
                                                <td>
                                                    <div class="p-weight">
                                                        {{ products.priceWeight }}
                                                    </div>
                                                </td>
                                                {% endif %}
                                            </tr>
                                            <tr>
                                                <td class="p-catagory">Spécifications</td>
                                                <td>
                                                    <div class="p-code">{{ products.specifications }}</div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="p-catagory">ref</td>
                                                <td>
                                                    <div class="p-code">{{ products.barCode }}</div>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
{% endblock %}