{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <a href="/"><i class="fa fa-home"></i> Accueil</a>
                        <span>Connexion</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="login-form">
                        <h2>Connectez-vous</h2>
                        <form form action="{{ path('security_login') }}" method="post">

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="group-input">
                            <label for="inputEmail" class="sr-only">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                        </div>
                        <div class="group-input">
                            <label for="inputPassword" class="sr-only">Password</label>
                            <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Password" required>
                        </div>

                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}">
                        
{#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
                        <div class="group-input gi-check">
                            <div class="gi-more">
                                <label for="remember_me">
                                    Se souvenir de moi
                                    <input type="checkbox" id="remember_me" name="_remember_me">
                                    <span class="checkmark"></span>
                                </label>
                                <a href="#" class="forget-pass">Mot de passe oublié</a>
                            </div>
                        </div></br>

                        <div class="col text-center">
                            <button type="submit" class="btn btn-primary">
                                Se connecter
                            </button>
                        </div></br>

                        </form>
                        <div class="switch-login">
                            <a href="/register" class="or-login">Ou créer un compte</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}