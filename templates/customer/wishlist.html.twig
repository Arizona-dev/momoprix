{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="/"><i class="fa fa-home"></i> Accueil</a>
                    <a href="/profile"> Mon compte</a>
                    <span>Ma liste de souhaits</span>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<div class="container">
	<div class="row">
		<div class="col-md-3 ">
		     <div class="list-group ">
              <a href="/profile" class="list-group-item list-group-item-action">Mon compte</a>
              <a href="/profile/orders" class="list-group-item list-group-item-action">Mes Commandes</a>
              <a href="/profile/wishlist" class="list-group-item list-group-item-action active">Ma liste de souhaits</a>
              <a href="/profile/address" class="list-group-item list-group-item-action">Mes Adresses</a>
              <a href="/profile/payments" class="list-group-item list-group-item-action">Moyens de Paiements</a>
          </div>
		</div>
		<div class="col-md-9">
		    <div class="card">
		        <div class="card-body">
		            <div class="row">
		                <div class="col-md-12">
		                    <h4>Votre liste de souhaits</h4>
		                    <hr>
		                </div>
		            </div>
		            <div class="row">
		                <div class="col-md-12">
                            {% for label, messages in app.flashes(['success_delete']) %}
                                {% for message in messages %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                    {% if wishlists > [] %}
                      
                        {% for item in wishlists %}
                          <div class="row">
                            <div class="col-md-6 mb-3">
                              <a style="color: black" href="/courses-en-ligne/{{ item.Product.name|slugify }}-{{ item.Product.id }}">{{ item.Product.name }}</a>
                            </div>
                            <div class="col-md-3 mb-3">
                              {{ item.Product.price }}
                            </div>
                            <div class="col-md-3 mb-3">
                              <a href="/courses-en-ligne/{{ item.Product.name|slugify }}-{{ item.Product.id }}"><img src="/img/products/{{ item.Product.imageUrl }}"></a>
                            </div>
                          </div>
                          <button id='{{ item.product.id }}' class="btn btn-danger rmvWish text-center">Supprimer</button>
                          <br>
                          <hr>
                        {% endfor %}
                      
                    {% else %}
                    <div class="row">
                          <div class="col-md-12 mt-5 mb-5 text-center">
                              <p style="font-size: 20px;">Il n'y a rien Ã  regarder ici !</p>
                          </div>
                      </div>
                    {% endif %}
		        </div>
		    </div>
    </div>
	</div>
</div>
<br>
{% endblock %}