{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<br>
<div class="container">
	<div class="row">
		<div class="col-md-3 ">
		     <div class="list-group ">
              <a href="/profile" class="list-group-item list-group-item-action">Mon compte</a>
              <a href="/profile/orders" class="list-group-item list-group-item-action active">Mes Commandes</a>
              <a href="/profile/receipts" class="list-group-item list-group-item-action">Mes Factures</a>
              <a href="/profile/address" class="list-group-item list-group-item-action">Mes Adresses</a>
              <a href="/profile/payments" class="list-group-item list-group-item-action">Moyens de Paiements</a>
          </div>
		</div>
		<div class="col-md-9">
		    <div class="card">
		        <div class="card-body">
		            <div class="row">
		                <div class="col-md-12">
		                    <h4>Modifier votre compte</h4>
		                    <hr>
		                </div>
		            </div>
		            <div class="row">
		                <div class="col-md-12">
		                    <form>
                              <div class="form-group row">
                                <label for="username" class="col-4 col-form-label">Identifiant*</label> 
                                <div class="col-8">
                                  <input id="username" name="username" placeholder="Identifiant" class="form-control here" required="required" type="text">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label for="firstname" class="col-4 col-form-label">Prénom</label> 
                                <div class="col-8">
                                  <input id="firstname" name="firstname" placeholder="Prénom" class="form-control here" type="text">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label for="lastname" class="col-4 col-form-label">Nom</label> 
                                <div class="col-8">
                                  <input id="lastname" name="lastname" placeholder="Nom" class="form-control here" type="text">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label for="email" class="col-4 col-form-label">Email*</label> 
                                <div class="col-8">
                                  <input id="email" name="email" placeholder="Email" class="form-control here" required="required" type="text">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label for="phone" class="col-4 col-form-label">Numéro de téléphone</label> 
                                <div class="col-8">
                                  <input id="phone" name="phone" placeholder="06xxxxxxxx" class="form-control here" type="text">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label for="newpass" class="col-4 col-form-label">Nouveau mot de passe</label> 
                                <div class="col-8">
                                  <input id="newpass" name="newpass" placeholder="Nouveau mot de passe" class="form-control here" type="text">
                                </div>
                              </div> 
                              <div class="form-group row">
                                <label for="newpassconf" class="col-4 col-form-label">Confirmer le mot de passe</label> 
                                <div class="col-8">
                                  <input id="newpassconf" name="newpassconf" placeholder="Retaper le mot de passe" class="form-control here" type="text">
                                </div>
                              </div>
                              <div class="form-group row">
                                <div class="offset-4 col-8">
                                  <button name="submit" type="submit" class="btn btn-primary">Mettre à jour</button>
                                </div>
                              </div>
                            </form>
		                </div>
		            </div>
		        </div>
		    </div>
    </div>
	</div>
</div>
<br>
{% endblock %}