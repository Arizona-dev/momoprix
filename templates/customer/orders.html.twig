{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="/"><i class="fa fa-home"></i> Accueil</a>
                    <a href="/profile"> Mon compte</a>
                    <span>Mes Commandes</span>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<div class="container">
	<div class="row">
		<div class="col-md-3 ">
		     <div class="list-group ">
              <a href="/profile" class="list-group-item list-group-item-action">Mon compte</a>
              <a href="/profile/orders" class="list-group-item list-group-item-action active">Mes Commandes</a>
              <a href="/profile/receipts" class="list-group-item list-group-item-action">Mes Factures</a>
              <a href="/profile/address" class="list-group-item list-group-item-action">Mes Adresses</a>
              <a href="/profile/payments" class="list-group-item list-group-item-action">Moyens de Paiements</a>
          </div>
		</div>
		<div class="col-md-9">
      <div class="card">
        <div class="card-body">
          <div class="row">
              <div class="col-md-12">
                <h4>Mes Commandes</h4>
                <hr>
              </div>
          </div>
        {% for order in orders %}
          <div class="row">
            
              <div class="col-md-6 mb-3">
                  <p>Status</p>
                  {{ order.status }}
              </div>
              <div class="col-md-6 mb-3">
                  <p>Date de la commande</p>
                  {{ order.dateOrder|date('d-m-Y') }}
              </div>
              <div class="col-md-6 mb-3">
                  <p>Prix HT</p>
                  {{ order.priceHT }}
              </div>
              <div class="col-md-6 mb-3">
                  <p>Prix TTC</p>
                  {{ order.priceTTC }}
              </div>
              <div class="col-md-12 mb-3">
                <div class="">
                  <p>Articles</p>
                </div>
                <div class="md-6">
                  <p>Désignation</p>
                </div>
                <div class="md-3 mb-3">
                  <p>Prix</p>
                </div>
                <div class="md-3 mb-3">
                  <p>Quantitée</p>
                </div>
                  {% for item in order.ProductQte %}
                  <div class="row">
                    <div class="col-md-6 mb-3">
                        <p>Désignation</p>
                        <a href="/courses-en-ligne/{{ item.Product.name|slugify }}-{{ item.Product.id }}">{{ item.Product.name }}</a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <p>Prix</p>
                        {{ item.Product.price }}
                    </div>
                    <div class="col-md-3 mb-3">
                        <p>Quantitée</p>
                        {{ item.quantity }}
                    </div>
                  </div>
                  {% endfor %}
              </div>
          </div>
          <hr>
          {% endfor %}
        </div>
      </div>
    </div>
	</div>
</div>
<br>
{% endblock %}